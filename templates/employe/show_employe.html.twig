{% extends "base.html.twig" %}

{% block body %}

<div>


<table class="container">

    <thead>
        <tr>
            <th>#</th>
            <th>Prénom</th>
            <th>Nom</th>
            <th>Téléphone</th>
            <th>Email</th>
            <th>Adresse</th>
            <th>Salaire</th>
            <th>Date de naissance</th>
            <th>Poste</th>
        </tr>
    </thead>

    <tbody>
    
            <tr>
                <td>{{ employe.id }}</td>
                <td>{{ employe.prenom }}</td>
                <td>{{ employe.nom }}</td>
